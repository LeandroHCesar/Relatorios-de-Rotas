<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- Outras propriedades de estilo do texto do título da Toolbar, se necessário -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">@color/color_default</item>
        <item name="hintTextColor">@color/colorHintText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_principal</item>
    </style>

    <!-- Estilos para os TextInputLayouts usados para campos pequenos   -->
    <style name="TextInputEditText_form_small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">@color/color_default</item>
        <item name="hintTextColor">@color/colorHintText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="backgroundTint">@color/colorButtonBackground</item>
    </style>

    <style name="ButtonItemStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/colorButtonBackground</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:indeterminateTint">@color/color_default</item>
    </style>

    <!--Definição de Estilo para o Container de Formulário-->
    <style name="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_form</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Estilos para os TextInputLayouts usados para campos diaria   -->
    <style name="TextInputEditText_exposed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">@color/color_default</item>
        <item name="hintTextColor">@color/colorHintText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>

</resources>